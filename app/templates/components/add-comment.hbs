<div class='col-xs-12 comments'>
    <h3>Comments</h3>
    {{#each article.comments as |comment|}}
      <div class="well">
        {{comment-tile comment=comment}}
      </div>
    {{/each}}

  <form>
    <div class="form-group">
      <label for="username">Username</label> {{input value=username id="username"}}
    </div>
    <div class="form-group">
      <label for="body">Comment</label> {{textarea value=body id="body"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label> {{input type='date' value=date id="date"}}
    </div>
    <button {{action 'saveComment'}}>Save</button>
  </form>
</div>
