{{#if updateArticle}}
  <div class='update-form'>
    <form>
      <div class="form-group">
        <label for="name">Author</label>
        {{input value=author id="author" placeholder=article.author}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=article.title}}
      </div>

      <div class="form-group">
        <label for="post">Body</label>
        {{input value=body id="body" placeholder=article.body}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input type='date' value=date id="date" placeholder=article.date}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=article.image}}
      </div>

      <button {{action 'update' article}}>Save</button>
    </form>
  </div>
{{else}}
  <button class='update-button' {{action 'updateFormShow' article}}>Update</button>
{{/if}}
