{{#if addNewArticle}}
  <div>
    <form>
      <div class="form-group">
        <label for="name">Author</label>
        {{input value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title"}}
      </div>

      <div class="form-group">
        <label for="post">Body</label>
        {{input value=body id="body"}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input type="date" value=date id="date"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image"}}
      </div>

      <button {{action 'saveArticle'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'articleFormShow'}}>New Article</button>
{{/if}}
